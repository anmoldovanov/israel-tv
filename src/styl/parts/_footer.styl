.footer
   background-color #222222
   padding 3rem 0
   color #a9a9a9;
   &__content
      +above('m')
         display flex
      //justify-content space-between
   //height 15rem
      

.footer-links
   display flex
   //flex-direction row-reverse
   margin-right 1rem
   a:nth-child(1)
      img
         width 15rem
   a:nth-child(2)
      img
         width 15rem
   +above('m')
      width 16rem
      display block
      margin-right 2rem
      img
         width 100%
   
.footer-public
   margin-right 1rem
   width 26.3rem
   height 16.4rem
   
   
.footer-nav
   margin-bottom 3rem
   +above('m')
      margin-bottom 0
      display flex
   &__item
      padding 0 1rem
      margin-bottom 2rem
      +above('m')
         padding 0 2rem
         width 20rem
         margin-bottom 0
         &:last-child
            width 24rem
   &__title
      padding-bottom .5em
      margin-bottom .5em
      border-bottom 1px dotted #5e5e5e
      


