.loader-page
   background-color #fff
   display flex
   justify-content center
   align-items center
   
.loader
   max-width 60rem
   width 100%
   
.loader-header
   margin-bottom 8rem
   +above('m')
      margin-bottom 13rem
      display flex
      align-items center
      justify-content center
   
.loader-logo
   text-align center
   margin-left 5rem
   +above('m')
      margin-left -1rem
   img
      width 20rem
      height 20rem
      
      +above('m')
         width 30rem
         height 30rem
         
.loader-desc
   color #559fd2
   text-align center
   padding-top 2rem
   +above('m')
      padding-top 4rem
      padding-left 5rem
      text-align left
   &__title
      font-size 3.6rem
      font-weight bold
      margin-bottom .4rem
   &__desc
      font-size 1.8rem
      font-weight 500
      

.loader-progress
   &__current
      height 3rem
      +above('m')
         height 4.3rem
      background-color #559fd2
      position relative
      transition .4s
   &__tooltip
      position absolute
      width (19.2rem / 3)
      height (14.8rem / 3)
      top (-9rem / 1.5)
      right (-5rem / 1.5)
      +above('m')
         right -5rem
         top -9rem
         width (19.2rem / 2)
         height (14.8rem / 2)
      background-image resolve('tooltip-bg.png')
      background-size contain
      background-position center
      text-align center
      font-size (2.4rem / 1.5)
      padding-top .75rem
      +above('m')
         padding-top 1rem
         font-size 2.4rem
      color #559fd2
      font-weight 600