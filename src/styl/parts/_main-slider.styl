.bee3D--effect__coverflow .bee3D
   $elem-1-translateX = 10rem; $elem-1-translateY = 0rem; $elem-1-scale = .85; $elem-1-opacity = 1; 
   $elem-2-translateX = 14rem * 1.5; $elem-2-translateY = 0rem; $elem-2-scale = .7; $elem-2-opacity = 1; 
   $elem-3-translateX = 16rem * 1.5; $elem-3-translateY = 0rem; $elem-3-scale = .7; $elem-3-opacity = 0; 
   &--before-3
      transform: translate((-1 * $elem-3-translateX / 2), $elem-3-translateY / 2)  scale($elem-3-scale) // rotateY(45deg)
      +above('s')
         transform: translate((-1 * $elem-3-translateX), $elem-3-translateY)  scale($elem-3-scale) // rotateY(45deg)
      opacity: $elem-3-opacity
      z-index: 7
      //filter blur(10px)
   &--before-2
      transform: translate((-1 * $elem-2-translateX / 2), $elem-2-translateY / 2)  scale($elem-2-scale) // rotateY(45deg)
      +above('s')
         transform: translate((-1 * $elem-2-translateX), $elem-2-translateY)  scale($elem-2-scale) // rotateY(45deg)
         .main-slider-tv &
            transform: translate((-1 * $elem-2-translateX / 1.1), $elem-2-translateY)  scale($elem-2-scale) // rotateY(45deg)
      opacity: $elem-2-opacity
      z-index: 8
      //filter blur(4px)
   &--before-1
      transform: translate((-1 * $elem-1-translateX / 2), $elem-1-translateY / 2)  scale($elem-1-scale) // rotateY(45deg)
      +above('s')
         transform: translate((-1 * $elem-1-translateX), $elem-1-translateY)  scale($elem-1-scale) // rotateY(45deg)
      opacity: $elem-1-opacity
      z-index: 9
      //filter blur(0px)
      
   &__active
      z-index: 10
   // &--after
   //    transform: translateX($elem-translateX)  scale($elem-scale) // rotateY(-45deg)
   //    z-index: 6
   &--after-1
      transform: translate($elem-1-translateX / 2, $elem-1-translateY / 2)  scale($elem-1-scale) // rotateY(-45deg)
      +above('s')
         transform: translate($elem-1-translateX, $elem-1-translateY)  scale($elem-1-scale) // rotateY(-45deg)
      opacity: $elem-1-opacity
      z-index: 9
      //filter blur(0px)
   &--after-2
      transform: translate($elem-2-translateX / 2, $elem-2-translateY / 2)  scale($elem-2-scale) // rotateY(-45deg)
      +above('s')
         transform: translate($elem-2-translateX, $elem-2-translateY)  scale($elem-2-scale) // rotateY(-45deg)
         .main-slider-tv &
            transform: translate($elem-2-translateX / 1.1, $elem-2-translateY)  scale($elem-2-scale) // rotateY(-45deg)
      opacity: $elem-2-opacity
      z-index: 8
      //filter blur(4px)
   &--after-3
      
      transform: translate($elem-3-translateX / 2, $elem-3-translateY / 2)  scale($elem-3-scale) // rotateY(-45deg)
      +above('s')
         transform: translate($elem-3-translateX, $elem-3-translateY)  scale($elem-3-scale) // rotateY(-45deg)
      opacity: $elem-3-opacity
      z-index: 7
      filter blur(10px)
         


