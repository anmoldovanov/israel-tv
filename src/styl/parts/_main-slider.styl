
.main-banner
   padding 3rem 3rem 10rem
   position relative
   // &--android-tv,
   // &--smart-tv
   padding 3rem 3rem 17rem
   z-index 2
   +below('xs')
      &.has-switch-tabslits
         padding-bottom 21rem
         .android-btn
            bottom 6rem
   +above('s')
      padding 3rem 3rem
      display flex 
      justify-content flex-end
      // &--android-tv,
      // &--smart-tv
      padding 6rem 3rem 7rem
      box-shadow: 0px 0px 43px 0px rgba(13, 126, 167, 0.1);
      
   .android-btn
      +below('xs')
         position absolute
         bottom 2.7rem
         left 50%
         transform translateX(-50%)
  
.main-banner-text
   text-align right
   .has-switch-tabslits &
      padding-bottom 2rem
   +above('s')
      position absolute
      top 3rem
      right 3rem
      bottom 4rem
      display flex
      flex-direction column
      justify-content space-between
      align-items flex-end
      [dir="rtl"] &
         align-items flex-start
      .android-btn
         align-self flex-start
   &__title
      color $blue
      white-space nowrap
      line-height 1
      margin-bottom 1em
      font-size 4.5rem
      +above('l')
         font-size 5rem
      +below('xs')
         margin-bottom 0
      

.main-banner-desc
   font-size 2.2rem
   color #428bca
   margin-top 1.5rem
   font-family $font-secondary

.main-slider
   position relative
   width 40rem
   height 36rem
   margin-top 1rem
   transform scale(.89) translate(6rem, 0)
   &.main-slider-tv
      height 14rem
      transform scale(.6) translate(9rem, 0)
   +above('s')
      height 22rem
      width 60rem
      margin-top 0
      transform scale(.78) translate(-1.5rem, -8rem)
      //margin-left 5rem
      &.main-slider-tv
         height 22rem
         transform scale(.78) translate(-3rem, -2.5rem)
         //margin-left 10rem
   +above('m')
      margin-left -7rem
      &.main-slider-tv
          transform scale(.65) translate(-3rem, -2.5rem)
          margin-left -5rem
   +above('xl')
      transform scale(.82) translate(-12.5rem, -8rem)
      margin-left 5rem
      &.main-slider-tv
         transform scale(.78) translate(-14rem, -2.5rem)
         margin-left 10rem
   img
      width 23rem
      transform scale(1.02)
   &__arrows
      position absolute
      left -1rem
      right -1rem
      top 16rem
      justify-content space-between
      display flex
      .main-slider-tv &
         top 11rem
         left -6rem
         right -6rem
   &__arrow
      height 6rem
      width 6rem
      background-color #fff
      border-radius 50%
      box-shadow: 0px 0px 43px 0px rgba(13, 126, 167, 0.1);
      padding-top .2rem
      &--next
         i
            transform translateX(.2rem)
      &--prev
         i
            transform translateX(-.2rem)
      &-inner
         //display flex
         //align-content center
         //justify-content center
         height 6rem
         line-height 6rem
         width 6rem
         text-align center
         display inline-block
      i
         display inline-block
      svg,
      i
         height 1.8rem
         width 1.8rem
         fill $blue
      &--green
         svg,
         i
            fill $green
      &--purple
         svg,
         i
            fill #672d91

.main-slider-slide
   width 100%
   height 100%
   .main-slider-tv &
      img
         height 100%
         width 100%
         object-fit cover
         object-position center
   position relative
   margin-left auto
   margin-right auto
   overflow hidden
   border-radius 2rem
   box-shadow: 0px 0px 43px 0px rgba(13, 126, 167, 0.21);
   

